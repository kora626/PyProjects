"""A strong password,
with at least 10 numbers, 1 uppercase, 1 symbol, 1 number
and Keeping track how many attempts it will take to generate a strong password"""

import random
print("A strong password with at least 10 numbers, 1 uppercase, 1 symbol, 1 number\n")
print("And The numbers to get the password\n")


def generator():
    character = random.randint(8, 15)
    password = ""
    for i in range(character):
        char = random.randint(33, 126)
        password += chr(char)
    # print(password)
    return password


def check(password):
    symbols = ",./<>?!@#$%^&*()~`_|"
    l = False
    num = False
    upp = False
    sym = False
    if len(password) >= 10:
        l = True
    for j in password:
        if j.isdigit():
            num = True
        if j.isupper():
            upp = True
        if j in symbols:
            sym = True
    if l and num and upp and sym:
        return True
    return False

def main():
    count = 1
    password = generator()
    while check(password) == False:
        password = generator()
        count += 1
    print(f'''The password is {password} and 
the number of times it will take is {count}''')

main()
